---
import { SITE } from 'astrowind:config';
import { blogAuthorRobots, findAuthors } from '~/utils/blog';

import Layout from '~/layouts/PageLayout.astro';
import PostTags from '~/components/blog/Tags.astro';

export const prerender = true;
const allAuthors = await findAuthors();

const metadata = {
  title: `Posts by author | '${SITE?.name}'`,
  robots: {
    index: blogAuthorRobots?.index,
    follow: blogAuthorRobots?.follow,
  },
};
---

<Layout metadata={metadata}>
  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <PostTags tags={allAuthors} title="Search by Author:" isCategory />
  </section>
</Layout>
